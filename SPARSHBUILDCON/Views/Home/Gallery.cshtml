@using SPARSHBUILDCON.Models;
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersContext db = new UsersContext();
    var getgallery = db.Mediagallerys.Where(aa=>aa.status==1).ToList();
}

<!--======= BANNER =========-->
  <div class="sub-banner" style="background-image: url('../Content/Home/img/lyman-banner-agents.png')">
    <div class="overlay">
      <div class="container">
        <h1>Gallery</h1>
        <ol class="breadcrumb">
          <li class="pull-left">Gallery</li>
          <li><a href="../Home/Index">Home</a></li>
          <li class="active">Gallery</li>
        </ol>
      </div>
    </div>
  </div>
 
<section class="contact"> 
    
    <!--======= CONTACT INFORMATION =========-->
    <div class="contact-info">
      <div class="container"> 
        <!--======= CONTACT =========-->
          <div class="row">
		<div class="col-md-12 tittle"> 
            <img src="~/Content/Home/images/head-top.png" alt="">
		<h3>Gallery</h3>
		</div>
              </div>
          <!--======= CERIFICATE =========-->
          <div class="row">
              @foreach (var item in getgallery)
              {
                  <div class="col-md-4 well">
                   <img style="width:100%;height:200px; position:relative;border-radius:10px;" src="@Url.Content(item.Image)" />
                  <h4 class="breadcrumb" style="color:#20853e;text-align:center">@item.Heading</h4>
              </div>
              }
             </div>
          </div>
        </div>
    </section>