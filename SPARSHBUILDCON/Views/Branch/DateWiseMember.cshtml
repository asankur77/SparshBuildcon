@model IEnumerable<SPARSHBUILDCON.Models.DWMemberList>
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    ViewBag.Title = "DateWiseMember";
    var a = 0;
    
}

<link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet" />
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>
<script>
    $(function () {
        $('#sdate').datepick();
        $('#edate').datepick();
      
    });
</script>

<div class="my-3 my-md-5">
    <div class="container" >
        <div class="page-header">
            <h4 class="page-title">Dashboard</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">DateWise Member List</a></li>
            </ol>

        </div>
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DateWise Member List</h3>

                    </div>
                     
                    <div class="card-body">
                         @using (@Html.BeginForm())
                      {
                        <div class="row"  id="hide" >
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
													<label class="form-label">Start Date</label>
													<input type="text" id="sdate" name="sdate" class="form-control" required />
												</div>

                            </div>
                             <div class="col-md-6 col-lg-6">
                                <div class="form-group">
													<label class="form-label">End Date</label>
													 <input type="text" id="edate" name="edate" class="form-control" required />
												</div>

                            </div>
                            <div class="card-footer text-right">
										<div class="d-flex">
										   <button id="submit" value="Search" class="btn btn-primary pull-right" type="submit" >View</button>
										</div>
									</div>

                        </div>
                         }
                    </div>
                          <div class="card-body">
                                	<div class="table-responsive">
									<table  class="table table-striped table-bordered" style="width:100%">
				    @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            
                              <tr >
                                  <th colspan="3"style="text-align:center;" >@User.Identity.Name</th>
                                <th colspan="3" style="text-align:center;"><b>Member List</b></th>
                                <th colspan="3"style="text-align:center;" ><b>Duration:@Convert.ToDateTime(item.sdate).ToString("dd/MM/yyyy")-@Convert.ToDateTime(item.edate).ToString("dd/MM/yyyy")</b></th>
                            </tr>
    <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="newid"><b>Member Id</b></label>
            </th>
        
        <th style="width:10%;text-align:center;">
           <label id="introducerid"><b>Member Name</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="spilid"><b>Date of Birth</b></label>
        </th>
           
        <th style="width:10%;text-align:center;">
           <label id="position"><b>Father Name</b></label>
        </th>
             
       
           
         <th style="width:10%;text-align:center;">
         <label id="email"><b>Mobile No</b></label>
        </th>

         <th style="width:10%;text-align:center;">
           <label id="dojh"><b> Date of Joining</b></label>
        </th>
      
    </tr>
    }
                        a = a + 1;


    <tr style="text-align:left;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newmemberid)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.dob)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.fathername)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Mobileno)
        </td>
         <td>
            @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")
        </td>
       
             
    </tr>
                   
    }

    }
    
    
   
</table>
             
                @if (a > 0)
                {
                    <a href="@Url.Action("PrintDateWiseMember")" target="_blank">Get Report In PDF</a>
                }  

    
									
								</div>
                                </div>
               


                </div>

                </div>

            </div>



        </div>

    </div>












