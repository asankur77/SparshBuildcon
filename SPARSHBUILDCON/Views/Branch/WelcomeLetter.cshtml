@using SPARSHBUILDCON.Models;
@{
    ViewBag.Title = "WelcomeLetter";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";

    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#newbond").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Branch/AutoCompleteBondId",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.name, value: item.newbondid };


                        }))

                    }
                })
            }
        });
    })
</script>
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Dashboard</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Customer Welcome Letter</a></li>
            </ol>

        </div>
        <div class="row">
            <div class="col-12">

                <div class="card">
           @using(Html.BeginForm())
{  <div class="card-header">
                            <h3 class="card-title">@mr.custname Welcome Letter</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label class="form-label">@mr.custname Id : </label>
                                        <div class="input-group">
                                             <input type="text" class="form-control" id="newbond" name="newbondid" required/>
                                            <span class="input-group-append">
                                               <button type="submit" class="btn btn-primary" onclick="target='_blank'"><i class="fa fa-cog"></i> Get Welcome Letter</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
           }

                </div>



            </div>

        </div>
    </div>
</div>















