@model IEnumerable<SPARSHBUILDCON.Models.VoucherList>
@using SPARSHBUILDCON.Models;
@{
    
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var vf = db.VFormatTabs.Single(f => f.Id == 1);
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    ViewBag.Title = "DCBrokerVoucher";
    var a = 0;
    Double sumcommission = 0, gramt = 0, bdc = 0;
    Double sumbusiness = 0, advpaymentsum = 0;
}

<link rel="stylesheet" href="~/Content/jquery-ui.css" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#newagentid").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Admin/AutoCompleteAgentid",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.name, value: item.NewAgentId };
                        }))

                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>
<script>
    function check(check_id) {

        $("#" + check_id).mouseover(function () {
            var intro = $("#" + check_id).val();
            var url = '@Url.Action("SelectPanno", "Branch")';
            $.get(url, { intro: intro }, function data(name1) {
                $('#panno').val(name1[0].Panno)
            });
        });

    }
</script>
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Dashboard</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">@vf.type</a></li>

            </ol>

        </div>
        <div class="row">
            <div class="col-12 card">

                <div class="card-header">
                    <h3 class="card-title">@vf.type</h3>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            
                            <div class="col-md-6 col-lg-6">
                                	<div class="form-group">
													<label class="form-label">Associate ID </label>
													   <input type="text" id="newagentid" name="newagentid" class="form-control" required />
												</div>
                                </div>
                                 <div class="col-md-6 col-lg-6">
                                <div class="form-group">
													<label class="form-label">Select Month </label>
												   <select class="form-control" id="month" name="month" required>
                                        <option selected>Select </option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>


                                    </select>
												</div>
                                     </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
													<label class="form-label">Select Year </label>
												   <select class="form-control" id="year" name="year" required>
                                        <option selected>Select </option>
                                        <option>2013 </option>
                                        <option>2014 </option>
                                        <option>2015 </option>
                                        <option>2016 </option>
                                        <option>2017 </option>
                                        <option>2018 </option>
                                        <option>2019 </option>
                                        <option>2020 </option>
                                        <option>2021 </option>
                                        <option>2022 </option>



                                    </select>
												</div>
                                     </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
													<label class="form-label">Enter Payment Date </label>
												   <input type="text" id="pdate" name="paydate" value="2015-06-08" class="form-control" required />
												</div>
                                     </div>
                                <div class="form-footer">
                                <input type="submit" id="Pay" name="Commond" class="btn btn-primary pull-right" />          
                                </div>

                            </div>

                   
            
                    }
                </div>

                	<div class="card-body">
                                	<div class="table-responsive" id="1">
									<table  class="table table-striped table-bordered" style="width:100%">
			    @using (Html.BeginForm())
       {
           foreach (var item in Model)
           {
               if (a == 0)
               {
                            
                    <tr>
                        <th style="width: 5%; text-align: center;">
                            <label id="sn"><b>S.N.</b></label>
                        </th>
                        <th style="width: 15%; text-align: center;">
                            <label id="newid"><b>@mr.agentname Id</b></label>
                        </th>

                        <th style="width: 15%; text-align: center;">
                            <label id="spilid"><b>@mr.agentname Name</b></label>
                        </th>
                        <th style="width: 10%; text-align: center;">
                            <label id="introducerid"><b>Introducer Id</b></label>
                        </th>

                        <th style="width: 10%; text-align: center;">
                            <label><b>Business</b></label>
                        </th>
                        <th style="width: 10%; text-align: center;">
                            <label><b>Gross Amount</b></label>
                        </th>
                        <th style="width: 10%; text-align: center;">
                            <label><b>TDS Amount</b></label>
                        </th>
                        <th style="width: 10%; text-align: center;">
                            <label><b>Adv. Payment</b></label>
                        </th>
                        <th style="width: 15%; text-align: center;">
                            <label id="Amount"><b>Amount</b></label>
                        </th>

                        <th colspan="3" style="width: 20%; text-align: center;">
                            <label id="View"><b>Action</b></label>
                        </th>




                    </tr>
               }
               a = a + 1;

               sumcommission = sumcommission + item.amount;
                    <tr style="text-align: left;">
                        <td>
                            @a
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.newagentid)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.introducerid)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.business)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrossAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TDSAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.advancepayment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.amount)
                        </td>

                        <td>
                            @Html.ActionLink("View", "PaymentOBVOne", new { newagentid = item.newagentid, month = item.month, year = item.year, status = 0 }, new { onclick = "return confirm('Are you sure to View this Voucher?');" })
                        </td>
                              @if (item.status == 0)
                              {
                            
                        <td colspan="2">

                                @Html.ActionLink("Pay", "DCV", new { newagentid = item.newagentid, month = item.month, year = item.year, status = 1, amount = item.amount }, new { onclick = "return confirm('Are you sure to Pay this Voucher?');" })
                            </td>
                              }
                        @* @if (item.amount<500)
          {
         <td>
                
            <button type="button" class="btn btn-danger" disabled="disabled">Not Eligible</button>
        </td>
          }*@
                        @if (item.status == 1)
                        {
                            <td>
                                 <a href="@Url.Action("ViewCheque", "Branch", new { newagentid = item.newagentid, month = item.month, year = item.year })" target="_blank">Print Cheque</a>
                            </td>
                            <td>
                                <button type="button" class="btn btn-success" disabled="disabled">Paid</button>
                            </td>
                        }


                    </tr>
        
       
                        
                        sumbusiness = sumbusiness + item.business;
                        gramt = gramt + item.GrossAmount;
                        bdc = bdc + item.TDSAmount;
                        advpaymentsum = advpaymentsum + item.advancepayment;
           }

           if (a > 0)
           {
                    <tr style="text-align: left;">
                        <td colspan="3">
                            <b>Grand Total:</b>
                        </td>
                        <td></td>

                        <td></td>
                        <td><b>@gramt</b></td>
                        <td><b>@bdc</b></td>
                        <td><b>@advpaymentsum</b></td>
                        <td>
                            <b>@sumcommission</b>
                        </td>
                        <td></td>

                        <td></td>
                    </tr>
       
            
           }


       }



            </table>


            @if (a > 0)
            {
                <a href="@Url.Action("PrintDCBrokerVoucher")" target="_blank">Get Voucher In PDF</a>
            }


       

                                        </div>
                        </div>
            </div>

        </div>
    </div>
</div>
















 
  







