@model IEnumerable<SPARSHBUILDCON.Models.DatewiseCustomerList>
@using SPARSHBUILDCON.Models;
@{
    ViewBag.Title = "BankRegis";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    int a = 0;
    DateTime bday = DateTime.Now.Date.AddDays(-1);
    DateTime tday = DateTime.Now.Date;
}

<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Dashboard</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bank Transaction Report</a></li>

            </ol>

        </div>
        <div class="row">
            <div class="col-12 card">

                <div class="card-header">
                    <h3 class="card-title">Bank Transaction Report</h3>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        <div class="row" id="hide">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="radio-inline">
                                        <input type="radio" value="@bday"  name="sdate">Before One Day
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label class="radio-inline">
                                        <input type="radio" value="@tday"  name="sdate">Current Day
                                    </label>
                                </div>
                                <div class="form-footer">
                              <button id="submit" value="Search" class="btn btn-primary" type="submit">View</button>
                                </div>

                            </div>

                        </div>
            
                    }
                </div>

                	<div class="card-body">
                                	<div class="table-responsive">
									<table id="example" class="table table-striped table-bordered" style="width:100%">
									    @using (Html.BeginForm())
                    {
                        foreach (var item in Model)
                        {
                            if (a == 0)
                            {
                        <tr>

                            <th colspan="4"><b><a href="@Url.Action("PrintBankTransRegis")" target="_blank">Get Report In PDF</a></b></th>

                            <th colspan="4"><b>Dated:@item.sdate.ToString("dd/MM/yyyy")</b></th>
                        </tr>
                        <tr>
                            <th style="width: 5%; text-align: center;">
                                <label id="sn"><b>S.N.</b></label>
                            </th>
                            <th style="width: 10%; text-align: center;">
                                <label id="newid"><b>Bank Name</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label id="introducerid"><b>Account no</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label id="spilid"><b>Transaction Type</b></label>
                            </th>
                            <th style="width: 8%; text-align: center;">
                                <label id="doj"><b>Transaction Id</b></label>
                            </th>
                            <th style="width: 8%; text-align: center;">
                                <label id=""><b>Amount</b></label>
                            </th>
                            <th style="width: 8%; text-align: center;">
                                <label id="pay"><b>Transaction Date </b></label>
                            </th>

                        </tr>
                            }
                            a = a + 1;


                        <tr style="text-align: center;">
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newintroducerid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newbondid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.branch)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.payment)
                            </td>

                            <td>
                                @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")

                            </td>

                        </tr>
                   
                        }

                    }
                                        	</table>

                                        </div>
                        </div>
            </div>

        </div>
    </div>
</div>











