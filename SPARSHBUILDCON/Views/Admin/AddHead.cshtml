@model IEnumerable<SPARSHBUILDCON.Models.HeadTab>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AddHead";
}


<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Expense Head</h4>
            <div id="reportrange" class="dtrange">
                <b class="caret"></b>
            </div>
        </div>
        <div class="row">
            <div class="col-12 card">

                <div class="card-header">
                    <h3 class="card-title">Expense Head</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="form-label">Enter Head</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="head" id="head" required />
                                        <span class="input-group-append">
                                            <button type="submit" class="btn btn-primary pull-right">Create Head</button>
                                        </span>
                                    </div>
                                </div>
                                <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12   ">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Head Expense Name</div>
                            </div>
                            <div class="card-body">



                                @foreach (var a in Model)
                                {
                                    <div class="form-group">
                                        <label class="form-label">@a.Id &nbsp; &nbsp;&nbsp;&nbsp;@a.head</label>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
