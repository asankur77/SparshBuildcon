@model IEnumerable<SPARSHBUILDCON.Models.BrokerList>
@using SPARSHBUILDCON.Models
@{
    ViewBag.Title = "DatewiseBrokerOperator";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var a = 0;

    UsersContext db = new UsersContext();
    var mr = db.Members.Single(c => c.Id == 1);
    
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#opid").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Admin/AutoCompleteOpId",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.OperatorName, value: item.OperatorId };
                        }))
                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>

<script src="~/Scripts/print.js" type="text/javascript"></script>
<div class="my-3 my-md-5">
    <div class="container" id="divid">
        <div class="page-header">
            <h4 class="page-title">Datewise @mr.agentname</h4>
            	<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="#">@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</a></li>
								
							</ol>

          
                @if (a > 0)
        {
            <a href="@Url.Action("PrintDatewiseBrokerOperator")"  class="btn btn-outline-primary" target="_blank">Get Report In PDF</a>
        }


        </div>
        <div class="row">
            <div class="col-12 card">

                <div class="card-header">
                    <h3 class="card-title">Datewise @mr.agentname</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Collection Point Id</label>
                                  <input type="text" id="opid" class="form-control" name="opid" required>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Start Date</label>
                                  <input type="date" class="form-control" name="sdate" required>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">End Date</label>
                                   <input type="date" class="form-control" name="edate" required>
                                </div>
                            </div>
                            <div class="card-footer text-right">
										<div class="d-flex">
										    <button class="btn btn-primary"><i class="fa fa-cog"></i>Search</button>
										</div>
									</div>

                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" style="width: 100%">
                                @foreach (var item in Model)
            {
                if (a == 0)
                {
                <tr>
                    <th colspan="2">@mr.branchname Name:@item.branchname</th>
                    <th colspan="3"><b>Duration:@Convert.ToDateTime(item.sdate).ToString("dd/MM/yyyy") -@Convert.ToDateTime(item.edate).ToString("dd/MM/yyyy")</b></th>
                    <th colspan="2"><b>Datewise @mr.agentname List</b></th>

                </tr>
                <tr>
                    <th style="width: 5%; text-align: center;">
                        <label><b>S.N.</b></label>
                    </th>
                    <th style="width: 25%; text-align: center;">
                        <label><b>@mr.agentname Id</b></label>
                    </th>

                    <th style="width: 20%; text-align: center;">
                        <label><b>Name</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label><b>@mr.rankname</b></label>
                    </th>

                    <th style="width: 20%; text-align: center;">
                        <label><b>Introducer Id</b></label>
                    </th>


                    <th style="width: 10%; text-align: center;">
                        <label><b>Mobile No</b></label>
                    </th>


                    <th style="width: 10%; text-align: center;">
                        <label id="email"><b>Date of Joining</b></label>
                    </th>


                </tr>
                }

                a = a + 1;
                <tr style="text-align: left;">
                    <td>
                        @a
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.newagentid)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.rankname)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.introducerid)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.mobile)
                    </td>

                    <td>
                        @Convert.ToDateTime(item.doj).ToString("dd/MM/yyyy")
                    </td>





                </tr>
            }

        </table>

                      
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>























