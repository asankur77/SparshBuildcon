@model IEnumerable<SPARSHBUILDCON.Models.MacTab>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "ChangeMacAddress";
    var a = 0;
}

<div class="my-3 my-md-5">
    <div class="container" id="divid">
        <div class="page-header">
            <h4 class="page-title">Change Mac Address</h4>
             <button type="button" class="btn btn-outline-primary">@DateTime.Now</button>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Change Mac Address</h3>
                      </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width: 100%">
                              @foreach (var item in Model)
            {
                if (a == 0)
                {
                <tr>
                    <th style="width: 10%; text-align: center;">
                        <label id="sn"><b>S.N.</b></label>
                    </th>
                    <th style="width: 40%; text-align: center;">
                        <label id="UserID"><b>User ID</b></label>
                    </th>

                    <th style="width: 40%; text-align: center;">
                        <label id="Type"><b>Type</b></label>


                    <th style="width: 10%; text-align: center;">
                        <label id="Action"><b>Action</b></label>
                    </th>
                </tr>
                }

                a = a + 1;
                <tr style="text-align: center;">
                    <td>
                        @a
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.userid)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>

                    <td>

                        @Html.ActionLink("Reset", "ChangeMacAddress", new { userid = item.userid }, new { onclick = "return confirm('Are you sure to Reset Macaddress for this?');" })
                    </td>

                </tr>
            }
</table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>














