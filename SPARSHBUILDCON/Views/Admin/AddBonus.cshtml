
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AddBonus";
}
<link rel="stylesheet" href="~/Content/jquery-ui.css" />

<script type="text/javascript" src="~/Scripts/autosearch.js"></script> 

<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Add Bonus</h4>
         
            
        </div>
          @using (Html.BeginForm())
                  {
        <div class="row">
            <div class="col-12 card">
                 <div class="card-header">
                        <h3 class="card-title">Add Bonus</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                           
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter @mr.agentname Id or Name</label>
                             <input type="text" class="form-control"  name="agentcode" id="newagentid" required/>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Select Month</label>
                                        <input type="month" class="form-control"  name="formonth" id="formonth" required/>
                                </div>

                                </div>
                                    <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter Type</label>
                                        <input type="text" class="form-control"  name="type" id="type" required/>
                                </div>

                                </div>  
                                  <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter Bonus Amount</label>
                                          <input type="number" step="any" class="form-control"  name="bonusamount" id="bonusamount" required/>
                                </div>

                                </div>                  
                            	<div class="card-footer text-right">
										<div class="d-flex">
							           <button  type="submit" class="btn btn-primary pull-right"> Add</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
                       
                    </div>
                        </div>
            
                
            </div>
        </div>
                  }
    </div>

     </div>





