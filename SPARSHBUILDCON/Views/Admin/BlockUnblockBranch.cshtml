@model IEnumerable<SPARSHBUILDCON.Models.Branchtab>
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "BlockUnblockBranch";
    var a = 0;
}
<div class="my-3 my-md-5">
    <div class="container" id="divid">
        <div class="page-header">
            <h4 class="page-title">Block-UnBlock @mr.branchname</h4>
            <button type="button" class="btn btn-outline-primary">@DateTime.Now</button>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Block-UnBlock @mr.branchname</h3>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered" style="width: 100%">
                                        @foreach (var item in Model)
                                        {
                                            if (a == 0)
                                            {
                                            <tr>
                                                <th style="width: 5%; text-align: center;">
                                                    <label id="sn"><b>S.N.</b></label>
                                                </th>
                                                <th style="width: 10%; text-align: center;">
                                                    <label id="BranchCode"><b>@mr.branchname Code</b></label>
                                                </th>

                                                <th style="width: 10%; text-align: center;">
                                                    <label id="BranchName"><b>@mr.branchname Name</b></label>
                                                </th>

                                                <th style="width: 10%; text-align: center;">
                                                    <label id="BranchDistrict"><b>@mr.branchname District</b></label>
                                                </th>

                                                <th style="width: 10%; text-align: center;">
                                                    <label id="branchaddress"><b>@mr.branchname Address</b></label>
                                                </th>


                                                <th style="width: 10%; text-align: center;">
                                                    <label id="mobile"><b>Mobile</b></label>
                                                </th>
                                                <th style="width: 10%; text-align: center;">
                                                    <label id="Action"><b>Action</b></label>
                                                </th>
                                            </tr>
                                            }

                                            a = a + 1;
                                            <tr style="text-align: center;">
                                                <td>
                                                    @a
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BranchCode)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BranchName)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BranchDistrict)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.branchaddress)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.mobile)
                                                </td>
                                                @if (item.status == 1)
                                                {
                                                    <td>

                                                        @Html.ActionLink("Block", "BlockUnblockBranch", new { bid = item.BranchCode, status = 1 }, new { onclick = "return confirm('Are you sure to Block this " + mr.branchname + "?');" })
                                                    </td>
                                                }
                                                @if (item.status == 0)
                                                {
                                                    <td>
                                                        @Html.ActionLink("UnBlock", "BlockUnblockBranch", new { bid = item.BranchCode, status = 0 }, new { onclick = "return confirm('Are you sure to Unblock this " + mr.branchname + "?');" })
                                                    </td>
                                                }
                                            </tr>
                                        }

                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






















