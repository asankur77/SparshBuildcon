@model SPARSHBUILDCON.Models.Ranktab
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreateRank";
}
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Create @mr.rankname</h4>
         
            
        </div>
          @using (Html.BeginForm())
                  {
        <div class="row">
            <div class="col-12 card">
                 <div class="card-header">
                        <h3 class="card-title">Create @mr.rankname</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                           
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">@mr.rankname Name</label>
                                   <input type="text" class="form-control"  name="RankName" id="rankname" required/>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> @mr.rankname Shortcut </label>
                                   <input type="text" class="form-control"  name="Rankshrtcut" id="rankshortcut" required/>
                                </div>

                                </div>
                                      <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Self Joining </label>
                                       <input type="number" step="any" class="form-control"  name="Selfquota" id="selfquota" required />
                                </div>

                                </div>   
                                  <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Team Quota </label>
                                         <input type="number" step="any" class="form-control" name="TeamQuota" id="teamquota" required/>
                                </div>

                                </div> 
                                            
                            	<div class="card-footer text-right">
										<div class="d-flex">
							     <button  type="submit" class="btn btn-primary pull-right"> Create @mr.rankname</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
                    
                       
                    </div>
                        </div>
            
                
            </div>
        </div>
                  }
    </div>

     </div>








