@model IEnumerable<SPARSHBUILDCON.Models.Appltab>
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "BlockUnblockCustomer";
    var a = 0;
    DateTime dt = DateTime.Now.Date;

}
<div class="my-3 my-md-5">
    <div class="container" id="divid">

        <div class="page-header">
            <h4 class="page-title">Block-Unblock @mr.custname</h4>

            <button type="button" class="btn btn-outline-primary">@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</button>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Block-Unblock @mr.custname</h3>

                    </div>
                    <div class="card-body">

                     
                                <div class="table-responsive" style="overflow-x: scroll;height:500px" >
                                    <table class="table table-striped table-bordered" style="width: 100%;" >

                                        @foreach (var item in Model)
                                        {
                                            if (a == 0)
                                            {
                                            <tr>
                                                <th id="sn">
                                                   S.N.
                                                </th>
                                                <th   id="newid">
                                                   @mr.custname Id
                                                </th>

                                                <th  id="introducerid">
                                                    @mr.custname Name
                                                </th>

                                                <th  id="spilid">
                                                   Introducer Id
                                                </th>



                                                <th  id="position">
                                                 @mr.planname Name
                                                </th>
                                                <th  id="mode">
                                                  Mode
                                                </th>

                                                <th id="Payment">
                                                  Payment
                                                </th>
                                                <th id="email">
                                                   Mobile No
                                                </th>

                                                <th id="doj">
                                                   Date of Joining
                                                </th>
                                                <th  id="damt" >
                                                  Due Amount
                                                </th>
                                                <th id="dinsta">
                                                  Due installment
                                                </th>
                                                <th  id="Action">
                                                   Action
                                                </th>
                                            </tr>
                                            }

                                            a = a + 1;

       
                                            <tr>
                                                <td>
                                                    @a
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.newbondid)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.name)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.newintroducerid)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.planname)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.mode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.payment)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.mobileno)
                                                </td>
                                                <td>
                                                    @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")
                                                </td>
                                                <td>
                                                    @item.dueamount
                                                </td>
                                                <td>
                                                    @item.dueinstall
                                                </td>
                                                @if (item.status == 1)
                                                {
                                                    <td>

                                                        @Html.ActionLink("Block", "BlockUnblockCustomer", new { newbondid = item.newbondid, status = 1 }, new { onclick = "return confirm('Are you sure to Block this " + mr.custname + "?');" })
                                                    </td>
                                                }
                                                @if (item.status == 0)
                                                {
                                                    <td>
                                                        @Html.ActionLink("UnBlock", "BlockUnblockCustomer", new { newbondid = item.newbondid, status = 0 }, new { onclick = "return confirm('Are you sure to Unblock this " + mr.custname + "?');" })
                                                    </td>
                                                }
                                            </tr>
                                        }

                                    </table>
                                </div>
                           
                    </div>
                    </div>
                </div>
           </div>
        </div>
    </div>

















