@model SPARSHBUILDCON.Models.PhaseTab
@using SPARSHBUILDCON.Models;
@{
    UsersContext db=new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreatePhase";
    
    //for accessing all cityname
    var allplan = db.Plans.Where(d => d.status == 1).ToList();
   
}
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Create Phase</h4>
         
            
        </div>
          @using (Html.BeginForm())
                  {
        <div class="row">
            <div class="col-12 card">
                 <div class="card-header">
                        <h3 class="card-title">Create Phase</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                           
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter @mr.planname Name</label>
                                     <select class="form-control" name="projectid" id="projectid" required>
                                            @foreach (var i in allplan)
                                            {
                                                <option value="@i.Plancode">@i.Planname</option>
                                            }
                                        </select>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter Phase Name</label>
                                      <input type="text" class="form-control" name="Phase" id="Phase" required />
                                </div>

                                </div>
                                                        
                            	<div class="card-footer text-right">
										<div class="d-flex">
							                  <button type="submit" class="btn btn-primary pull-right">Create Phase</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                    
                       
                    </div>
                        </div>
            
                
            </div>
        </div>
                  }
    </div>

     </div>




