@model IEnumerable<SPARSHBUILDCON.Models.Branchlist>
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "BranchList";
    var a = 0;
}

<div class="my-3 my-md-5">
    <div class="container" id="divid">
        <div class="page-header">
            <h4 class="page-title">@mr.branchname List</h4>

        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">@mr.branchname List</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width: 100%">
                                @foreach (var item in Model)
                                {
                                    if (a == 0)
                                    {
                                    <tr>
                                        <th style="width: 5%; text-align: center;">
                                            <label id="sn"><b>S.N.</b></label>
                                        </th>
                                        <th style="width: 10%; text-align: center;">
                                            <label id="BranchCode"><b>@mr.branchname Code</b></label>
                                        </th>
                                        <th style="width: 10%; text-align: center;">
                                            <label ><b>Password</b></label>
                                        </th>
                                        <th style="width: 10%; text-align: center;">
                                            <label id="BranchName"><b>@mr.branchname Name</b></label>
                                        </th>

                                        <th style="width: 10%; text-align: center;">
                                            <label id="BranchDistrict"><b>District</b></label>
                                        </th>

                                        <th style="width: 10%; text-align: center;">
                                            <label id="branchaddress"><b>Address</b></label>
                                        </th>


                                        <th style="width: 10%; text-align: center;">
                                            <label id="mobile"><b>Mobile</b></label>
                                        </th>
                                    </tr>
        }

        a = a + 1;
                                    <tr style="text-align: center;">
                                        <td>
                                            @a
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BranchCode)
                                        </td>
                                         <td>
                                            @Html.DisplayFor(modelItem => item.password)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BranchName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.BranchDistrict)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.branchaddress)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.mobile)
                                        </td>

                                    </tr>
    }

                            </table>
                            @if (a > 0)
                            {
                                <a href="@Url.Action("PrintBranchList")" target="_blank">Get Report In PDF</a>
    }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>













