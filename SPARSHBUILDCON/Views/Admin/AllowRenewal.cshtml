@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AllowRenewal";
    var dt = db.RPTabs.Single(c => c.Id == 1);
}
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Permission of Renewal to other @mr.branchname  </h4>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Permission of Renewal to other @mr.branchname </h3>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm())
                        {
                            
                            if (dt.status == 0)
                            {
                            <div class="col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="form-label">Action</label>
                                          <label class="radio-inline">
                                           <input type="radio" name="status" class="plantype" value="1" id="active" />Active  
                                        </label>
                                        <label class="radio-inline">
                                           <input type="radio" name="status" class="plantype" value="0" id="inactive" checked />Deactive
                                        </label>
                                    </div>
                                </div>
                            }
                            if (dt.status == 1)
                            {
                            <div class="col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="form-label">Action</label>
                                        <label class="radio-inline">
                                           <input type="radio" name="status" class="plantype" value="1" id="active1" checked />Active  
                                        </label>
                                        <label class="radio-inline">
                                          <input type="radio" name="status" class="plantype" value="0" id="inactive1" />Deactive
                                        </label>
                                         
     
                                    </div>
                                </div>
                            }  
                            <div class="card-footer text-right">
                                <div class="d-flex">
                                    <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure to change option? ');">Submit</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
 
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

























