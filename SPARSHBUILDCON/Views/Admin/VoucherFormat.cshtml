        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        
       
         @if(item.status==0)
          {
         <td>
                
            @Html.ActionLink("Active", "VoucherFormat", new { Id = item.Id, status = 1 }, new { onclick = "return confirm('Are you sure to Active this Format?');" })
        </td>
