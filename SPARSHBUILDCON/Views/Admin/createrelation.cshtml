@model IEnumerable<SPARSHBUILDCON.Models.relation>
@using SPARSHBUILDCON.Models;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "createrelation";
    var a = 0;
}

<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Create Relation</h4>
         
            
        </div>
        
        <div class="row">
            <div class="col-12 card">
                 <div class="card-header">
                        <h3 class="card-title">Create Relation</h3>
                    </div>
                    <div class="card-body">
                          @using (Html.BeginForm())
                  {
                        <div class="row">
                           
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter Relation</label>
                            <input type="text" class="form-control"  name="relations" id="relations" required/>
                                </div>

                                </div>
                                       
                            	<div class="card-footer text-right">
										<div class="d-flex">
							    <button  type="submit" class="btn btn-primary pull-right"> Create Relation</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>

                       
                    </div>
                  }
                        </div>
            	<div class="card-body">
                                	<div class="table-responsive">
                                        @if (Convert.ToInt32(ViewData["count"])>0)
                                {
									<table class="table table-striped table-bordered" style="width:100%">
                                        @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <tr style="text-align:center;">
                                <th  style="text-align:center;"></th>
                                <th style="text-align:center;"><b>All Relation List</b></th>
                            </tr>
    <tr>
        <th style="width:10%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:40%;text-align:center;">
           <label id="newid"><b> Relations</b></label>
            </th>
      
      
    </tr>
    }
                        a = a + 1;


    <tr style="text-align:left;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.relations)
        </td>

         
        
             
    </tr>
                   
    }

    }
    
    
   
</table>
                                        }
                                        </div>
                    </div>
                
            </div>
        </div>
                 
    </div>

     </div>
















