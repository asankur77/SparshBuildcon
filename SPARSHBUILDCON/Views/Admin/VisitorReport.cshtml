@model IEnumerable<SPARSHBUILDCON.Models.Visitortab>
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    ViewBag.Title = "VisitorReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int a = 0;
}
<script>
    $(function () {
        $("#sdate").datepick();
        $("#edate").datepick();
    });
</script>
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Visitors List</h4>
            	<button type="button" class="btn btn-outline-primary">@DateTime.Now</button>



        </div>
        <div class="row">
            <div class="col-12 card">

                <div class="card-header">
                    <h3 class="card-title">Visitors List</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Select Start Date</label>
                                      <input type="date" class="form-control date" name="sdate" id="sdate"  required / >
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label">Select End Date</label>
                                <input type="date" class="form-control date" name="edate" id="edate"  required / >
                                </div>
                            </div>

                            
                            <div class="card-footer text-right">
                                <div class="d-flex">
                                       <button id="btnsearch" name="command" type="submit" class="btn btn-primary" value="Search">Search</button> 

                                </div>
                            </div>

                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" style="width: 100%">
    @foreach (var item in Model)
    {
        if (a == 0)
        {
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="OperatorId"><b>Name</b></label>
            </th>
         <th style="width:10%;text-align:center;">
           <label id="name"><b>Mobile</b></label>
            </th>
       <th style="width:10%;text-align:center;">
           <label id="introducer"><b>Purpose</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="OperatorName"><b>Date</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="BranchCode"><b>In Time</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
            <label id="OperatorMobile" ><b>Out Time</b></label>
        </th>
       <th style="width:10%;text-align:center;">
            <label id="branch" ><b>Branch</b></label>
        </th>
       <th style="width:10%;text-align:center;">
            <label id="op" ><b>Operator</b></label>
        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purpose)
        </td>
        <td>
              @Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.intime)
        </td>
    
        <td>
            @Html.DisplayFor(modelItem => item.outtime)
        </td>
       <td>
            @Html.DisplayFor(modelItem => item.branchcode)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.opid)
        </td>
    </tr>
    } 

</table>
<p style="color:maroon;margin-left:15px;"><b> @ViewBag.msg</b></p>     
 @*   @if (a > 0)
    {
        <a href="@Url.Action("PrintOperatorList")" target="_blank">Get Report In PDF</a>
    }
      *@   
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>














