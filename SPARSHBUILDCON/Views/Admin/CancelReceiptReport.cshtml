@model IEnumerable<SPARSHBUILDCON.Models.CancelRcptList>
@using SPARSHBUILDCON.Models;
@{    
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CancelReceiptReport";
    var a = 0;
    Double amount = 0;
}

<div class="my-3 my-md-5">
					<div class="container">
						<div class="page-header">
							<h4 class="page-title">Cancel Receipt List</h4>
							
						</div>
						<div class="row">
							<div class="col-md-12 col-lg-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Cancel Receipt List</div>
								</div>
								<div class="card-body">
                                	<div class="table-responsive">
									<table class="table table-striped table-bordered" style="width:100%">
                                        @foreach(var item in Model){
        if(a==0)
        {
         
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>Sr.No.</b></label>
            </th>
        <th style="width:9%;text-align:center;">
           <label id="Bond"><b>@mr.custname Id</b></label>
            </th>
        <th style="width:8%;text-align:center;">
           <label id="payamount"><b> @mr.custname Name</b></label>
        </th>
       <th style="width:10%;text-align:center;">
           <label id="payamount1"><b> @mr.agentname Name</b></label>
        </th>
       <th style="width:6%;text-align:center;">
           <label id="payamount2"><b> Amount</b></label>
        </th>
            <th style="width:7%;text-align:center;">
           <label id="Plan"><b>@mr.planname Name</b></label>
        </th>
      
         <th style="width:6%;text-align:center;">
            <label id="Mode" ><b>Mode</b></label>
        </th>
            
        <th style="width:6%;text-align:center;">
           <label id="Term"><b>Term</b></label>
        </th>
               <th style="width:9%;text-align:center;">
           <label id="Installment"><b>Installment No</b></label>
            </th>
        <th style="width:6%;text-align:center;">
           <label id="rc"><b>Receipt No</b></label>
            </th>

        <th style="width:8%;text-align:center;">
            <label id="Expiry" ><b>Payment Date</b></label>
        </th>
            
        <th style="width:7%;text-align:center;">
           <label id="Date"><b>Time</b></label>
        </th>
        
       <th style="width:9%;text-align:center;">
           <label id="Cancel"><b>Cancel By</b></label>
        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newbondid)
        </td>
       <td>
            @Html.DisplayFor(modelItem => item.customername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brokername)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.payamount)
        </td>
        
        <td>
             @Html.DisplayFor(modelItem => item.planname)
        </td>
       
       
         <td>
            @Html.DisplayFor(modelItem => item.mode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.term)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.installmentno)
        </td>
         <td>
               @Html.DisplayFor(modelItem => item.receiptno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pdate)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.cdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cancelby)
        </td>
             
    </tr>
        amount = amount + Convert.ToDouble(item.payamount);
    } 
@if (a > 0)
{
    <tr style="text-align:center;">
        <td colspan="4"><b>Grand total</b></td>
        <td>@amount</td>
        <td></td>
         <td></td>
         <td></td>
         <td></td>
         <td></td>
         <td></td>
         <td></td>
        <td></td>
    </tr> 
}
</table>
    @if (a > 0)
    {
        <a href="@Url.Action("PrintCancelReport")" target="_blank">Get Report In PDF</a>
    }
</table>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>
    </div>











