@model IEnumerable<SPARSHBUILDCON.Models.DatewiseCustomerList>
@using SPARSHBUILDCON.Models;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "FilterCustomer";
    var a = 0;

    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    
}
<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Filter @mr.custname List</h4>
        </div>
        <div class="row card">
            <div class="card-body" style="width: 98%">
                @using (Html.BeginForm())
                {         
                    <div class="row" id="hide">
                        <div class="col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="form-label">Enter Percentage</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="per" name="per" required>
                                    <span class="input-group-append">
                                      <button id="submit" value="Search" class="btn btn-primary pull-Right" type="submit">View</button>
                                    </span>
                                </div>
                            </div>


                        </div>

                    </div>
                }
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive" >
                            <table  class="table table-striped table-bordered" style="width: 100%">
             @using (Html.BeginForm())
                    {
                        foreach (var item in Model)
                        {
                            if (a == 0)
                            {
                        <tr>

                            <th colspan="7"><b>Filter @mr.custname List</b></th>
                            <th colspan="7"><b>Dated: @DateTime.Now.ToString("dd/MM/yyyy")</b></th>
                        </tr>
                        <tr>
                            <th style="width: 5%; text-align: center;">
                                <label id="sn"><b>S.N.</b></label>
                            </th>
                            <th style="width: 10%; text-align: center;">
                                <label id="newid"><b>@mr.custname Id</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label id="introducerid"><b>Name</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label id="spilid"><b>Introducer Id</b></label>
                            </th>
                            <th style="width: 5%; text-align: center;">
                                <label id="position"><b>@mr.planname</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label><b>Booking Amount</b></label>
                            </th>
                            <th style="width: 5%; text-align: center;">
                                <label><b>Advance </b></label>
                            </th>
                            <th style="width: 6%; text-align: center;">
                                <label><b>Plot Size</b></label>
                            </th>
                            <th style="width: 8%; text-align: center;">
                                <label id="pay"><b>Payment </b></label>
                            </th>
                            <th style="width: 8%; text-align: center;">
                                <label id="email"><b>Mobile No</b></label>
                            </th>

                            <th style="width: 8%; text-align: center;">
                                <label id="doj"><b>Joining Date</b></label>
                            </th>
                            <th style="width: 5%; text-align: center;">
                                <label><b>Block No</b></label>
                            </th>
                            <th style="width: 5%; text-align: center;">
                                <label><b>Plot No</b></label>
                            </th>
                          <th style="width: 5%;">
                          <label><b>Action</b></label>
                          </th>

                        </tr>
                            }
                            a = a + 1;


                        <tr style="text-align: center;">
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newbondid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.newintroducerid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.planname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bookingamount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.downpayment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.plotsize)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.payment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mobile)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.block)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.plotno)
                            </td>
                            @if(item.plotno==0)
                            {
                            <td>
                                @Html.ActionLink("Allot Plot", "AllotPlot", new { newbondid = item.newbondid }, new { onclick = "return confirm('Are you sure to Allot?');" })
                            </td>
                            }
                            else
                             {
                            <td>
                                <button type="button" class="btn btn-success" disabled="disabled">Alloted</button>
                            </td>
        }
                        </tr>
                   
                        }

                    }
                </table>
                @* @if (a > 0)
                {
                    <a href="@Url.Action("PrintFilterCustomer")" target="_blank">Get Report In PDF</a>
                }*@
                        </div>
                    </div>
                </div>


            </div>
        </div>



    </div>
</div>























