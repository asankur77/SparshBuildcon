@model SPARSHBUILDCON.Models.Operator
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreateOperator";
}

<link rel="stylesheet" href="~/Content/jquery-ui.css" />
<script type="text/javascript" src="~/Scripts/autosearch.js"></script> 


<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Create Collection Point</h4>
         
            
        </div>
        <div class="row">
            <div class="col-12 card">
                  @using (Html.BeginForm())
                  { <div class="card-header">
                        <h3 class="card-title">Create Collection Point</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="form-label"> @mr.branchname Code</label>
                                   <input type="text" class="form-control"  name="BranchCode" id="BranchCode" required>
                                </div>
                            </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Collection Point Name</label>
                                   <input type="text" class="form-control"  name="OperatorName" id="oname" required>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Collection Point Id</label>
                                   <input type="text" class="form-control" style="text-transform:uppercase"  name="OperatorId" id="oid" required>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Mobile No</label>
                                 <input type="tel" class="form-control" pattern="[789][0-9]{9}" title="Mobile no is not correct format"  maxlength="10" name="OperatorMobile" id="omob" required>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Email Id</label>
                               <input type="email" class="form-control" title="EmailId not in correct format" name="Operator_Mail" required>
                                </div>

                                </div>
                            <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Address</label>
                                <textarea class="form-control"   name="OperatorAddress" id="oadd" required></textarea>
                                </div>

                                </div>
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label"> Date</label>
                                 <input type="text" class="form-control datepicker"name="Cdate" id="date" required>
                                </div>

                                </div>
                            
                            	<div class="card-footer text-right">
										<div class="d-flex">
								  <button  type="submit" class="btn btn-primary pull-right"> Create Collection Point</button>   
                                </div>
                                             </div>
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
                        </div>
                    </div>
                  }
            </div>
        </div>
    </div>
</div>



















           
                        
                  
  <script type="text/javascript">
    $(document).ready(function () {
        $('#submit').click(function () {
             @Html.ValidationSummary( true)
        });
    });
 </script>