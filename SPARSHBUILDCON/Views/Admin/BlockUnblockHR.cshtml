@model IEnumerable<SPARSHBUILDCON.Models.HRTab>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "BlockUnblockHR";
    var a = 0;
}
<script src="~/Scripts/print.js" type="text/javascript"></script>
<div class="my-3 my-md-5">
    <div class="container" id="divid">

        <div class="page-header">
            <h4 class="page-title">Block-UnBlock HR</h4>
            
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">
                    @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</a></li>

            </ol>
            <button type="button" class="btn btn-outline-primary" name="btnprint" value="Print" onclick="PrintMe('divid')">Print</button>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Block-UnBlock HR</h3>

                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered" style="width: 100%">
                                        @foreach (var item in Model)
                                        {
                                            if (a == 0)
                                            {
                                            <tr>
                                                <th style="width: 5%; text-align: center;">
                                                    <label id="sn"><b>S.N.</b></label>
                                                </th>
                                                <th style="width: 10%; text-align: center;">
                                                    <label id="HRId"><b>HR Id</b></label>
                                                </th>

                                                <th style="width: 10%; text-align: center;">
                                                    <label id="HRName"><b>HR Name</b></label>
                                                </th>



                                                <th style="width: 10%; text-align: center;">
                                                    <label id="HRMobile"><b>HR Mobile</b></label>
                                                </th>

                                                <th style="width: 10%; text-align: center;">
                                                    <label id="HRAddress"><b>HR Address</b></label>
                                                </th>
                                                <th style="width: 10%; text-align: center;">
                                                    <label id="HR_Mail"><b>HR Mail</b></label>
                                                </th>
                                                <th style="width: 10%; text-align: center;">
                                                    <label id="Cdate"><b>Creation date</b></label>
                                                </th>
                                                <th style="width: 10%; text-align: center;">
                                                    <label id="Action"><b>Action</b></label>
                                                </th>

                                            </tr>
                                            }

                                            a = a + 1;
                                            <tr style="text-align: center;">
                                                <td>
                                                    @a
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.HRId)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.HRName)
                                                </td>



                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Mobile)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.emailid)
                                                </td>
                                                <td>
                                                    @Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")
                                                </td>
                                                @if (item.Status == 1)
                                                {
                                                    <td>

                                                        @Html.ActionLink("Block", "BlockUnblockHR", new { hrid = item.HRId, status = 1 }, new { onclick = "return confirm('Are you sure to Block this HR?');" })
                                                    </td>
                                                }
                                                @if (item.Status == 0)
                                                {
                                                    <td>
                                                        @Html.ActionLink("UnBlock", "BlockUnblockHR", new { hrid = item.HRId, status = 0 }, new { onclick = "return confirm('Are you sure to Unblock this HR?');" })
                                                    </td>
                                                }
                                            </tr>
                                        }

                                    </table>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
















