@model IEnumerable<SPARSHBUILDCON.Models.CityStateTab>
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AddState";
    var a = 0;
}


<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Add State/City</h4>
         
            
        </div>
        
        <div class="row">
            <div class="col-12 card">
                 <div class="card-header">
                        <h3 class="card-title">Add State/City</h3>
                    </div>
                    <div class="card-body">
                          @using (Html.BeginForm())
                  {
                        <div class="row">
                           
                             <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Select State</label>
                             <select class="form-control" id="State" name="State" required>
                                            <option selected>Select </option>
                                                 <option>Andhra Pradesh </option>
                                                 <option>Arunachal Pradesh </option>
                                                 <option>Assam</option>
                                                 <option>Bihar </option>
                                                 <option>Chattisgarh </option>
                                                 <option>Goa </option>
                                                 <option>Gujrat </option>
                                                 <option>Haryana </option>
                                                 <option>Himachal Pradesh</option>
                                                 <option>Jammu & Kashmir</option>
                                                 <option>Jharkhand </option>
                                                 <option>Karnataka </option>
                                                 <option>Kerala </option>
                                                 <option>Madhya Pradesh </option>
                                                 <option>Maharashtra </option>
                                                 <option>Manipur</option>
                                                 <option>Meghalaya </option>
                                                 <option>Mizoram </option>
                                                 <option>Nagaland</option>
                                                 <option>Odisha </option>
                                                 <option>Panjab </option>
                                                 <option>Rajasthan </option>
                                                 <option>Sikkim </option>
                                                 <option>Tamil Nadu</option>
                                                 <option>Telangana </option>
                                                  <option>Tripura </option>
                                                 <option>Uttar Pradesh</option>
                                                 <option>UttaraKhand </option>
                                                  <option>West Bengal </option>
                                        </select>
                                </div>

                                </div>
                                        <div class="col-md-6">
                                    <div class="form-group">
                                    <label class="form-label">Enter City</label>
                             <input type="text"  class="form-control"  name="City" id="City" required/>
                                </div>

                                </div> 
                            	<div class="card-footer text-right">
										<div class="d-flex">
							   <button  type="submit" class="btn btn-primary pull-right"> Add</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon; margin-left:15px;"><b> @ViewBag.msg</b></p>

                       
                    </div>
                  }
                        </div>
            	<div class="card-body">
                                	<div class="table-responsive">
                                 @if (Convert.ToInt32(ViewData["count"])>0)
                                {
									<table class="table table-striped table-bordered" style="width:100%">
                                     @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <tr style="text-align:center;"><th ></th>
                                <th  style="text-align:center;"><b>All State-City List</b></th>
                                <th style="text-align:center;"><b>@DateTime.Now.ToString("dd/MM/yyyy")</b></th>
                            </tr>
    <tr>
        <th style="width:10%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:40%;text-align:center;">
           <label id="newid"><b> State</b></label>
            </th>
        <th style="width:40%;text-align:center;">
           <label id="spilid"><b>City</b></label>
        </th>
      
    </tr>
    }
                        a = a + 1;


    <tr style="text-align:left;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.state)
        </td>

           <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        
             
    </tr>
                   
    }

    }
    
   
</table>
                                        }
                                        </div>
                    </div>
                
            </div>
        </div>
                 
    </div>

     </div>

