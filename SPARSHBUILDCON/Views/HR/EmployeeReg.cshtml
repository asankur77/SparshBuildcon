@model SPARSHBUILDCON.Models.Emp_Reg
@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    var br = db.HRTabs.Single(o => o.HRId == User.Identity.Name);
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewBag.Title = "EmployeeReg";
}

<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Employee Registration</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                       
                        
                    </div> 
                    
                    @using (Html.BeginForm("EmployeeReg", "HR", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                       <div class="row" >
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" >
                               
                                <div class="block-content controls" >


                                    <div class="row-form"  >
                                    
                                  <div class="col-md-9">


                                       <div class="input-group">
                                            <span class="input-group-addon"><label class="width">Branch Code</label></span>
                                             <input type="text"  required name="branchcode" value="@br.BranchCode" class="form-control" readonly="true">
                                                </div>
                                    
                                
                                      </div>
                                            </div>




                                    <div class="row-form"  >
                                    
                                  <div class="col-md-9">


                                       <div class="input-group">
                                            <span class="input-group-addon"><label class="width">Employee ID</label></span>
                                             <input type="text"  required name="empid"  class="form-control">
                                                </div>
                                    
                                
                                      </div>
                                            </div>

                                    
                                    <div class="row-form"  >
                                    
                                  <div class="col-md-9">


                                     

                                      


                                   
                                       <div class="input-group">
                                            <span class="input-group-addon"><label class="width">Full Name</label></span>
                                             <input type="text" id="IntroducerCode" required name="name"  class="form-control">
                                                </div>
                                    
                                
                                      </div>
                                            </div>
                                


                                                   
            
                                     <div class="row-form">
                                        
                                        <div class="col-md-9">
                                            
                                               <div class="input-group">
                                            <span class="input-group-addon"><label class="width">Father/Husband's Name</label></span>
                                                <input type="text"  class="form-control" name="father" id="IntroName" />
                                                </div>
                                    
                                        </div>
                                    </div>


                                     <div class="row-form">
                                        
                                        <div class="col-md-9">
                                            

                                               
            


                                             <div class="input-group">
                                            <span class="input-group-addon"><label class="width">Date OF Birth</label></span>
                                                <input type="date" name="dob" class="form-control"
                                                    />
                                                </div>

                                        </div>
                                    </div>

                                      <div class="row-form">
                                        
                                        <div class="col-md-9">
                                            

                                             <div class="input-group">
                                            <span class="input-group-addon"><label class="width" >Gender</label></span>


                                                 <select id="Select1" class="form-control" name="gender">
                                                     <option disabled="disabled">Select</option>
                                                     <option value="Male">Male</option>
                                                      <option value="Female">Female</option>

                                                 </select>



                                               
                                                  
                                                </div>

                                        </div>
                                    </div>

                                     
                                    <div class="row-form">
                                  
                                        <div class="col-md-9">

                                             
            
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">Department</label></span>
                                             
                                             <input type="text" required name="department" class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>

                                    <div class="row-form">
                                  
                                        <div class="col-md-9">

                                             
            
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">Designation</label></span>
                                             
                                             <input type="text" required name="Designation" class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>







                                    <div class="row-form">
                                  
                                        <div class="col-md-9">

                                             
            
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">Basic Salary</label></span>
                                             
                                             <input type="number" required name="basicsalary" class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>

                                    <div class="row-form">
                                  
                                        <div class="col-md-9">
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">Mobile</label></span>
                                             
                                             <input type='tel' title="Invalid mobile format" pattern="[789][0-9]{9}" maxlength="10" required name="mob" class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>


                                    <div class="row-form">
                                  
                                        <div class="col-md-9">

                                             
            
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">E-Mail ID</label></span>
                                             
                                             <input type="email" required name="email" class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>
                                            
                                           <div class="row-form">
                                  
                                        <div class="col-md-9">
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">Address</label></span>
                                             
                                             <input type="text" required name="address" id="dt" class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>

                                    <div class="row-form">
                                  
                                        <div class="col-md-9">
                                            
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">State</label></span>
                                             
                                             <input type="text" required name="state"  class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>

                                    <div class="row-form">
                                  
                                        <div class="col-md-9">
                                  
                                         <div class="input-group">
                                         <span class="input-group-addon"><label class="width">District</label></span>
                                             
                                             <input type="text" required name="distict"  class="form-control" />

                                    
                                         </div>


                                        </div>
                                    
                                     
                                     
                                     </div>
                                    <div class="row-form">
                                  
                                        <div class="col-md-9">
             <div class="input-group">
  <span class="input-group-addon">Upload Images</span>
        <input type="file" id="filename1" value="Upload Picture" name="Photoimg"/>
            </div></div>

                                          </div>

                                      <div class="row-form">
                                  
                                        <div class="col-md-9">
             <div class="input-group">
  <span class="input-group-addon">Upload CV</span>
        <input type="file" id="filename" value="Upload Picture" name="Photo"/>
            </div></div>

                                          </div>


                                        </div>
                                    </div>
                               
                                  

                                       <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
                                <button name="submitbtn" type="submit" class="btn btn-primary"> Register</button>                            
                               
                            </div>
                        </div>
                                             
                                    
                                      <p>@ViewBag.msg</p> 
                                </div>
                                
                            </div>
                        
                        
                    }
                            </div>
                          </div>  
                  
                        
                   
    
