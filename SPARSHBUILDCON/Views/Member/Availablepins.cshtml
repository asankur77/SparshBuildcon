@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    ViewBag.Title = "Availablepins";
    Layout = "~/Views/Shared/_member_new_layout.cshtml";
    var lists = db.pintabs.Where(x => x.status == 0 && x.assignto == User.Identity.Name).Count();

    var a = 1;
}


@if(lists>0)
{
<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">Available pins
                </h3>
                <i style="font-weight: 800; color: green; text-align: center;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @ViewData["msg"] </i>
                <ul class="breadcrumb">
                    <li><a href="~/Member/Dashboard"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>

                    </li>
                    <li><a href="#">DYNAMIC WAY REAL ESTATE PVT LTD</a><span class="divider">&nbsp;</span> </li>
                    <li><a href="#">Available pins</a><span class="divider-last">&nbsp;</span></li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
        <div class="span12">
           <div class="widget-title">
                    <h4>
                        <i class="icon-reorder"></i>All Available Pin Detail</h4>  </div>
                        </div>
                        </div>
                        <br />        
                           <div class="col-lg-12">
        <div class="col-sm-12">      
            <div class="card-box table-responsive">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">         
                        <thead>
                             <tr>
                             <th>SrNo</th>
                                       
                                        <th>Pin Number</th>
                                        <th>PIN Amount</th>
                                        <th>Assign Date</th>
                                        
                        </tr>
                        </thead>
                        <tbody> 
                                    @foreach (var item in  db.pintabs.Where(x => x.status == 0 && x.assignto == User.Identity.Name).ToList())
                                    {
                                        
                                        <tr>
                                           
                                            <td>@a</td>
                                           
                                            <td>@item.pin</td>
                                            <td>@item.pinamount</td>
                                            <td>@item.Assigndate.ToString("dd/MM/yyyy")</td>
                                            
                                        </tr>
                                        a = a + 1;
                                      
                                    }
                        </tbody>
                   </table>
                                            
            </div>
        </div>
    </div>
</div>

        </div>
    </div>
}
else
{
    <label style="color:red; font-size:medium; font-weight:bold;">You have no Pins</label>
}
