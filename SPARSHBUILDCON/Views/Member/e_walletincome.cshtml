@using SPARSHBUILDCON.Models;
@{
    UsersContext db = new UsersContext();
    ViewBag.Title = "e_walletincome";
    Layout = "~/Views/Shared/_member_new_layout.cshtml";
    var wallet = db.TransactionTabs.Where(x => x.accountno==User.Identity.Name && x.drawon == "DEDUCT").ToList();
    //var walletamount = db.wallettabs.Single(x => x.UserId == User.Identity.Name).amount;
    var b = 1;
    var r = db.CompanyInfos.Single(ci => ci.Id == 1);
}


<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">Wallet Deduction
                </h3>
                <i style="font-weight: 800; color: green; text-align: center;">@ViewData["msg"] </i>
                <ul class="breadcrumb">
                    <li><a href="~/Member/Dashboard"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>

                    </li>
                    <li><a href="#">@r.CompanyName</a><span class="divider">&nbsp;</span> </li>
                    <li><a href="#">Wallet Deduction</a><span class="divider-last">&nbsp;</span></li>
                </ul>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="widget-title">
                    <h4>
                        <i class="icon-reorder"></i>Amount Deduction</h4>
                </div>
            </div>
        </div>
                        <br />
        <div class="col-lg-12">
            <div class="col-sm-12">

                <div class="card-box table-responsive">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">

                            <tr>
                                <th>Sr. No.</th>
                                <th>Transaction Id</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Account By</th>
                                <th>Debit</th>
                                <th>Remark</th>
                            </tr>
                            </thead>
                    <tbody>
                        @foreach (var i in wallet)
                        {
                            <tr>
                                <td>@b</td>
                                <td>@i.transactionid</td>
                                <td>@i.pdate.ToString("dd/MMM/yyyy")</td>
                                <td>@i.Time</td>
                                <td>Admin(@i.opid)</td>
                                <td>@i.debit</td>
                                <td>@i.remark</td>

                            </tr>
                            b++;
                        }
                        <tr>
                            @*<td colspan="7" class="text-primary">Balance Till Today(@walletamount.00)</td>*@
                        </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


