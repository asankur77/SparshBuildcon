@using SPARSHBUILDCON.Models;
@model IEnumerable<SPARSHBUILDCON.Models.Enquiry_tab>
@{
    ViewBag.Title = "My_enquiry";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
    var b = 1;
}


<!--//outer-wp-->
<div class="outter-wp">
    <!--/sub-heard-part-->
    <div class="sub-heard-part">
        <ol class="breadcrumb m-b-0">
            <li><a href="index.html">Home</a></li>
            <li class="active">Enquiry</li>
        </ol>
    </div>
    <!--/sub-heard-part-->
    <!---728x90--->
    <!--/forms-->
    <div class="forms-main">
        <h2 class="inner-tittle">Enquiry Form </h2>
        <p style="color:#02BBCA">@ViewData["msg"]</p>
        <div class="graph-form">
            <div class="form-body">
                <form method="post">
                    <div class="form-group ">
                        <label class="control-label">Subject</label>
                        <input type="text" name="subject" class="form-control" required>
                    </div>
                    <div class="form-group ">
                        <label class="control-label">Message</label>
                        <textarea name="request" class="form-control" required></textarea>

                    </div>
                    <button type="submit" class="btn btn-primary" name="command" value="submit">Submit</button>
                </form>
            </div>

        </div>
    </div>
    <!--//forms-->
    <div class="graph-visual tables-main">
        <h2 class="inner-tittle">Enquiry Status</h2>
        <div class="graph">
        
  
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
                            <th >Sr.</th>
                            <th >Ticket No</th>
                            <th >MemberId</th>
                            <th >Subject</th>
                           
                            <th >Request Date</th>
                         
                            
                            <th >Action</th>
                        </tr>
    </thead>
   <tbody>

                        @foreach (var item in Model)
                        {
                             
                          
                            <tr>
                                <td>@b</td>
                                <td>@item.Ticket_no</td>
                                <td>@item.memberid</td>
                                <td>@item.Subject</td>
                              
                                <td>@item.Request_date.ToString("dd-MMM-yyyy")</td>
                        
                               

                                @if (item.Status == 0)
                                {
                                    <td style="text-align: center">
                                        
                                   <a class="a_demo_four" > Pending</a>
                                            
                                    </td>
                                }

                                else if(item.Status==1)
                                {
                                    <td style="text-align: center;"><a href="/Member/Enquiry_status?tid=@item.Ticket_no" class="a_demo_four">Resolved</a></td>
                                }

                            </tr>
                                b++;
@* @Url.Action("Enquiry_status", "Member", new { tid = @item.Ticket_no })*@
                        }
                    </tbody>

  </table>
  </div>

        </div>
    </div>

    
</div>
<!--//outer-wp-->
