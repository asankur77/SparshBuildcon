@using SPARSHBUILDCON.Models;

@{
    ViewBag.Title = "Update_Profile";
    UsersContext db = new UsersContext();
    Layout = "~/Views/Shared/_member_new_layout.cshtml";
    var cust = db.AgentDetails.Single(a => a.NewAgentId == User.Identity.Name);
}

<style>
    .datepick-month-year {
        width: 50%;
        float: left;
    }
</style>

<script>
    $(document).ready(function () {
        {
            $('#Dob').datepick({ dateFormat: 'mm/dd/yyyy', changeYear: true, changeMonth: true });
        }
    });
</script>
<script>
    function readURL3(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#sasa')
                    .attr('src', e.target.result)
                    .width(100)
                    .height(100);
            };

            reader.readAsDataURL(input.files[0]);

        }
    }
    $(document).ready(function () {
        $("#sasa").click(function () {
            $("#pic").click();
        });
    });
</script>

<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">My Profile Details
                </h3>
                <i style="font-weight: 800; color: green; text-align: center;"> @ViewData["msg"] </i>
                
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget">
                    <div class="widget-title">
                        <h4>
                            <i class="icon-reorder"></i>My Profile Details</h4>
                        <span id="ctl00_ContentPlaceHolder1_Label2" class="control-label"></span>
                    </div>
                    @using (Html.BeginForm("Update_Profile", "Member", FormMethod.Post,
                             new { enctype = "multipart/form-data" }))
                    {

                        <div class="widget-body form">
                            <div class="form-horizontal">
                                <div id="ctl00_ContentPlaceHolder1_pnlmain">


                                    <div class="control-group">
                                        <label class="control-label">
                                            Associate Id
                                        </label>
                                        <div class="controls">
                                            <input name="NewAgentId" type="text" value="@cust.NewAgentId" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                       
                                        <label class="control-label">
                                            Associate Name</label>
                                        <div class="controls">
                                            <input name="name" type="text" value="@cust.name" disabled="disabled" />
                                        </div>
                                            </div>
                                        <div class="control-group">
                                            <label class="control-label">
                                          Upload Profile</label>
                                           
                                        <div class="controls">
                                            <input type="file" name="memberprofile" id="pic" onchange="readURL3(this)"/>
                                            <br />

                                            @if(cust.Photo!=null)
                                            {
                                             <img src="@Url.Content(cust.Photo)" style="width:100px; height:100px" id="sasa" />
                                            }
                                            
                                        </div>
                                            </div>
                                 
                                    <div class="control-group">
                                        <label class="control-label">
                                            Father/Spouse Name</label><div class="controls">
                                                <input value="@cust.Father" name="Father" type="text"   placeHolder=" Father/Spouse Name" />
                                            </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Date Of Birth</label>
                                        <div class="controls">
                                            <input name="Dob" id="Dob" class="date" type="text" value="@cust.Dob" />


                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Country</label>
                                        <div class="controls">
                                            <input value="@cust.Nationality" name="Nationality"  type="text"  placeHolder="Country" />
                                            <select style="max-width: 220px;">
                                                <option>select</option>
                                                <option>India</option>
                                            </select>


                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Address</label>
                                        <div class="controls">
                                            <textarea name="Address">@cust.Address</textarea>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Pincode</label>
                                        <div class="controls">
                                            <input  name="PinCode" value="@cust.PinCode" type="text"  placeholder="Pincode" />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            State</label><div class="controls">
                                                <input value="@cust.State" name="State" type="text"  placeHolder="State" />

                                            </div>

                                        <div class="control-group">
                                            <br />
                                            <label class="control-label">
                                                City</label>
                                            <div class="controls">
                                                <input  name="District" value="@cust.District" type="text"  placeholder="Pincode" />
                                            </div>
                                        </div>

                                        <div class="control-group">
                                            <label class="control-label">
                                                Mobile</label>
                                            <div class="controls">
                                                <input value="@cust.Mobile" name="Mobile" type="text"  placeHolder="Mobile" />

                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">
                                                E-mail</label>
                                            <div class="controls">
                                                <input value="@cust.Email" name="Email" type="text"  placeHolder="Mobile" />

                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">
                                                Nominee Name</label>
                                            <div class="controls">
                                                <input value="@cust.NomineeName" name="NomineeName" type="text"  placeHolder="Mobile" />

                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">
                                                Approx current Age</label>
                                            <div class="controls">
                                                <input value="@cust.Age" name="Age" type="text"  placeHolder="Mobile" />

                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">
                                                Relation</label>
                                            <div class="controls">
                                                <select style="max-width: 220px;" name="Relationship">
                                                    <option>@cust.Relationship</option>
                                                    <option value="Husband">Husband</option>
                                                    <option value="Wife">Wife</option>
                                                    <option value="Son">Son</option>
                                                    <option value="Daughter">Daughter</option>
                                                    <option value="Father">Father</option>
                                                    <option value="Mother">Mother</option>
                                                    <option value="Brother">Brother</option>
                                                    <option value="Sister">Sister</option>
                                                </select>

                                            </div>
                                        </div>
                                        
                                        <br />
                                        <div class="control-group">
                                            <label class="control-label">
                                            </label>
                                            <div class="controls">

                                                <button type="submit" class="btn btn-primary pull-center">Update Profile</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>





                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
