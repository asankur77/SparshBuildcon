@using SPARSHBUILDCON.Models;
@{
    ViewBag.Title = "Bank_Update";
    Layout = "~/Views/Shared/_member_new_layout.cshtml";
    UsersContext db = new UsersContext();
    var cust = db.AgentDetails.Single(a => a.NewAgentId == User.Identity.Name);
    var r = db.CompanyInfos.Single(ci => ci.Id == 1);
}

<script>
    function readURL1(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah1')
                    .attr('src', e.target.result)
                    .width(300)
                    .height(150);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
    function readURL2(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah2')
                    .attr('src', e.target.result)
                    .width(300)
                    .height(150);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
    function readURL3(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah3')
                    .attr('src', e.target.result)
                    .width(300)
                    .height(150);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
    </script>


<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">Bank Detail
                </h3>
                <i style="font-weight: 800; color: green; text-align: center;"> @ViewData["msg"] </i>
                <ul class="breadcrumb">
                    <li><a href="~/Member/Dashboard"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
                    </li>
                    <li><a href="#">@r.CompanyName</a><span class="divider">&nbsp;</span> </li>
                    <li><a href="#">Bank Detail</a><span class="divider-last">&nbsp;</span></li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget">
                    <div class="widget-title">
                        <h4>
                            <i class="icon-reorder"></i>Bank Detail</h4>
                        <span id="ctl00_ContentPlaceHolder1_Label2" class="control-label"></span>
                    </div>
                    <div class="widget-body form">
                        <div class="form-horizontal">
                            @using (Html.BeginForm("Bank_Update", "Member", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div id="ctl00_ContentPlaceHolder1_pnlmain">


                                    <div class="control-group">
                                        <label class="control-label">
                                            Bank Name
                                        </label>
                                        <div class="controls">
                                            <input type="text"  value="@cust.BankName" name="BankName" />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Branch Name
                                        </label>
                                        <div class="controls">
                                            <input type="text" value="@cust.BankBranchName" name="BankBranchName" />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Account Holder Name
                                        </label>
                                        <div class="controls">
                                            <input type="text" value="@cust.AccountHolder" name="AccountHolder"/>
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">
                                            Account No.
                                        </label>
                                        <div class="controls">
                                            <input type="number" value="@cust.BankAccountno" name="BankAccountno"/>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Account Type
                                        </label>
                                        <div class="controls">
                                            <input type="text" value="@cust.AccountType" name="AccountType"/>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            IFSC Code
                                        </label>
                                        <div class="controls">
                                            <input type="text" value="@cust.IFCCode" name="IFCCode"/>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Pan No
                                        </label>
                                        <div class="controls">
                                            <input type="text" value="@cust.Panno" name="Panno"/>
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">
                                            Aadhaar No
                                        </label>
                                        <div class="controls">
                                            <input type="text" value="@cust.Aadhaar_No" name="Aadhaar_No" />
                                        </div>
                                    </div>

                                    <div class="widget-title">
                                        <h4>
                                            <i class="icon-reorder"></i>Upload Document</h4>
                                        <span id="ctl00_ContentPlaceHolder1_Label3" class="control-label"></span>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">
                                            Upload Cheque
                                        </label>
                                        <div class="controls">
                                            <input type="file" name="bank_img" style="background-color: #ff6a00; color: white;" onchange="readURL1(this);">
                                            <br />
                                            @if (@cust.bank_img != null)
                                            {
                                                <img src="@Url.Content(cust.bank_img)" style="width:80%;height:100px" id="blah1"/>
                                    }
                                            else
                                            {
                                                <img src="~/Content/Home2/passbook.jpg" style="width: 80%; height: 100px" id="blah1" />
                                    }
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label">
                                            Upload PAN Card
                                        </label>
                                        <div class="controls">
                                            <input type="file" name="pan_img" style="background-color: #ff6a00; color: white;" onchange="readURL2(this);">
                                            <br />

                                            @if (@cust.pan_img != null)
                                            {
                                                <img src="@Url.Content(cust.pan_img)" style="width:80%;height:100px" id="blah2"/>
                                    }
                                            else
                                            {
                                                <img src="~/Content/Home2/pan.jpg" style="width: 80%; height: 100px" id="blah2" />
                                    }
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                            Upload Aadhaar Card
                                        </label>
                                        <div class="controls">
                                            <input type="file" name="aadhaar_img" style="background-color: #ff6a00; color: white;" onchange="readURL3(this);">
                                            <br />

                                            @if (@cust.aadhaar_img != null)
                                            {
                                                <img src="@Url.Content(cust.aadhaar_img)" style="width:80%;height:100px" id="blah3"/>
                                    }
                                            else
                                            {
                                                <img src="~/Content/Home2/aadhaar.jpg" style="width: 80%; height: 100px" id="blah3" />
                                    }
                                        </div>

                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">
                                        </label>
                                        <div class="controls">
                                            <button type="submit" class="btn btn-primary">Update KYC Details</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>