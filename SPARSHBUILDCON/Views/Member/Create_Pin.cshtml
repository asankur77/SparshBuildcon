@using PagedList.Mvc
@model  PagedList.IPagedList<SPARSHBUILDCON.Models.Create_Pin>
@using SPARSHBUILDCON.Models;
@{
    ViewBag.Title = "Create_Pin";
    Layout = "~/Views/Shared/_member_new_layout.cshtml";
    UsersContext db = new UsersContext();
   // var cpin = db.Create_Pins.Where(x => x.srno != 0 && x.ID==User.Identity.Name).ToList();
    int a = 1;
    int counting = Convert.ToInt32(ViewData["lastpage"]);
    int pageno = Convert.ToInt32(ViewData["pageno"]);
    int gets = Convert.ToInt32(ViewData["srno"]);
    int sr = gets + 1;
    int starts = gets + 1;
}



<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">Create Pin
                </h3>
                <i style="font-weight: 800; color: green; text-align: center;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @ViewData["msg"] </i>
                <ul class="breadcrumb">
                    <li><a href="~/Member/Dashboard"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>

                    </li>
                    <li><a href="#">DYNAMIC WAY REAL ESTATE PVT LTD</a><span class="divider">&nbsp;</span> </li>
                    <li><a href="#">Create Pin Detail</a><span class="divider-last">&nbsp;</span></li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
        <div class="span12">
           <div class="widget-title">
                    <h4>
                        <i class="icon-reorder"></i>All Create Pin Detail</h4>  </div>
                        </div>
                        </div>
                        <br />        
                           <div class="col-lg-12">
        <div class="col-sm-12">      
            <div class="card-box table-responsive">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">         
                        <thead>
                             <tr>
                             <th>SrNo</th>
                                        <th>Create Name</th>
                                        <th>Total PIN</th>
                                        <th>PIN Amount</th>
                                        <th>Date</th>
                                        <th>Time</th>
                        </tr>
                        </thead>
                        <tbody> 
                                    @for (int i = 0; i < Model.Count(); i++ )
                                    {
                                        <tr>
                                            @if(pageno==1)
                                            {
                                            <td>@a</td>
                                            }
                                            else
                                            {
                                                <td>@sr</td>
                                            }
                                            <td>@Model[i].ID</td>
                                            <td>@Model[i].Total_Pin</td>
                                            <td>@Model[i].Pin_Amount</td>
                                            <td>@Model[i].Date.ToString("dd/MM/yyyy")</td>
                                            <td>@Model[i].Date.ToShortTimeString()</td>
                                        </tr>
                                        a = a + 1;
                                        sr++;
                                    }
                        </tbody>
                   </table>
                                              <center> <div id="container" >
        <p></p>
        <p></p>
        <div class="pagination">
           <label style="color:#a311dd;"> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount</label>&nbsp&nbsp @Html.PagedListPager(Model, page => Url.Action("Create_Pin", new { page }))
        </div>
    </div></center>
            </div>
        </div>
    </div>
</div>

        </div>
    </div>


































