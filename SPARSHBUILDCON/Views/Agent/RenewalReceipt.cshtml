@model IEnumerable<SPARSHBUILDCON.Models.SelfdueCollection>
@using SPARSHBUILDCON.Models;
@{
    Layout = "~/Views/Shared/_New_AgentLayout.cshtml";
    ViewBag.Title = "RenewalReceipt";
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var a = 0;
}

  

<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title"></h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Agents</a></li>
                <li class="breadcrumb-item active" aria-current="page">Self Due Collection</li>
            </ol>
            <a href="@Url.Action("PrintBrokerSelfDueReport")" class="btn btn-outline-primary" target="_blank" style="float:right">Get Report In PDF</a>
        </div>


        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                      
                    </div>
                    <div class="card-body">
                    <div id="1">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                @foreach (var item in Model)
                                {
                                    if (a == 0)
                                    {        
                                    <thead>
                                        <tr>
                                            <th style="width: 5%; text-align: center;">
                                                <label><b>S.N.</b></label>
                                            </th>
                                            <th style="width: 10%; text-align: center;">
                                                <label><b>@mr.custname Id</b></label>
                                            </th>
                                            <th style="width: 10%; text-align: center;">
                                                <label><b>@mr.planname Name</b></label>
                                            </th>
                                            <th style="width: 5%; text-align: center;">
                                                <label><b>Mode</b></label>
                                            </th>
                                            <th style="width: 8%; text-align: center;">
                                                <label><b>Mobile No</b></label>
                                            </th>
                                            <th style="width: 8%; text-align: center;">
                                                <label><b>Expiry Date</b></label>
                                            </th>
                                            <th style="width: 5%; text-align: center;">
                                                <label><b>Due Inst.</b></label>
                                            </th>
                                            <th style="width: 8%; text-align: center;">
                                                <label><b>EMI Amount</b></label>
                                            </th>
                                            <th style="width: 5%; text-align: center;">
                                                <label><b>Latefine</b></label>
                                            </th>
                                            <th style="width: 8%; text-align: center;">
                                                <label><b>Due Amount</b></label>
                                            </th>
                                        </tr>
                                    </thead>
                                    }
                                    a = a + 1;


                                    <tr style="text-align: center;">
                                        <td>
                                            @a
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.newbondid)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.planname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mobileno)
                                        </td>
                                        <td>
                                            @Convert.ToDateTime(item.expirydate).ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.installmentno)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.amount)
                                        </td>
                                        <td>
                                            @Math.Round(item.term, 0)
                                        </td>
                                        <td>
                                            @(Math.Round(item.term, 0) + item.amount)
                                        </td>
                                    </tr>
                   
                                }

                            </table>

                        </div>
                    </div>
                        </div>
                </div>
            </div>

        </div>
    </div>
</div>

