@model IEnumerable<SPARSHBUILDCON.Models.ChaindueCollection>
@using SPARSHBUILDCON.Models;
@{
    Layout = "~/Views/Shared/_New_AgentLayout.cshtml";
    ViewBag.Title = "BrokerChainDueCollection";

    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var a = 0;
    
}


  <div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title"></h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Agents</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chain Due Collection</li>
            </ol>
             <a href="@Url.Action("PrintBrokerChainDueReport")" class="btn btn-outline-primary" target="_blank">Get Report In PDF</a>
        </div>
  <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                               <div class="col-md-3" style="float: left">
                            <h3 class="card-title"><b>@mr.agentname Chain Due Collection</b></h3>
                        </div>
                        <div class="col-md-6">
                            <label><b>@mr.branchname Name:@User.Identity.Name</b> </label>
                        </div>
                        <div class="col-md-3" style="float: right">
                            <label><b>Dated:<span style="color: #17B794">@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</span> </b></label>
                        </div>
                    </div>
                    <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">

                    @foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <thead>
                       
                        <tr style="text-align: center;">
                            <th colspan="3">@mr.branchname Name:@item.branchname</th>
                            <th colspan="3">@mr.agentname Id:@item.brokercode</th>
                            <th colspan="4">@mr.agentname Name:@item.brokername</th>

                        </tr>
                            
                        <tr>
                            <th style="width: 5%; text-align: center;">
                                <label><b>S.N.</b></label>
                            </th>
                            <th style="width: 10%; text-align: center;">
                                <label><b>@mr.agentname Id</b></label>
                            </th>
                            <th style="width: 10%; text-align: center;">
                                <label><b>@mr.agentname Name</b></label>
                            </th>
                            <th style="width: 10%; text-align: center;">
                                <label><b>@mr.custname Id</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label><b>@mr.custname Name</b></label>
                            </th>
                          @*  <th style="width: 5%; text-align: center;">
                                <label><b>Mobile No</b></label>
                            </th>*@
                            <th style="width: 10%; text-align: center;">
                                <label><b>Amount</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label><b>@mr.planname Name</b></label>
                            </th>

                            <th style="width: 5%; text-align: center;">
                                <label><b>Term </b></label>
                            </th>
                            <th style="width: 7%; text-align: center;">
                                <label id="email"><b>Mode</b></label>
                            </th>



                            <th style="width: 10%; text-align: center;">
                                <label><b>Maturity Date</b></label>
                            </th>



                        </tr>
                                </thead>
                        }
                        a = a + 1;


                        <tr style="text-align: center;">
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newagentid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newbondid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.cname)
                            </td>
                          @*  <td>
                                @Html.DisplayFor(modelItem => item.mobileno)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.amount)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.planname)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.term)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mode)
                            </td>

                            <td>
                                @Convert.ToDateTime(item.expirydate).ToString("dd/MM/yyyy")
                            </td>
                        </tr>
                   
                    }
                </table>
                 </div>
               </div>
            </div>
        </div>
      </div>
    </div>
</div>   
                    

                   










