@model IEnumerable<SPARSHBUILDCON.Models.BrokerChain>
@using SPARSHBUILDCON.Models;
@{
    Layout = "~/Views/Shared/_New_AgentLayout.cshtml";
    ViewBag.Title = "BrokerChain";
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var a = 0;
  
}

<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title"></h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Agents</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chain List</li>
            </ol>
             <a href="@Url.Action("PrintBrokerChainReport")" class="btn btn-outline-primary" target="_blank">Get Report In PDF</a>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-md-3" style="float:left">
                        <h3 class="card-title">@mr.agentname Chain List</h3>
                        </div>
                        <div class="col-md-6"></div>
                        <div class="col-md-3" style="float:right">
                        <label class="card-title" ><b>Date:<span  style="color:#17B794" > @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</span> </b></label>
                        </div>
                    </div>
                    <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">

                            @foreach (var item in Model)
                            {
                                if (a == 0)
                                {
                                <thead >
                                  
                                    <tr>
                                        <th style="width: 5%;">
                                            <label id="sn"><b>S.N.</b></label>
                                        </th>
                                        <th style="width: 20%;">
                                            <label id="NewAgentId"><b>@mr.agentname Id</b></label>
                                        </th>

                                        <th style="width: 20%;">
                                            <label id="name"><b>@mr.agentname Name</b></label>
                                        </th>
                                        <th style="width: 20%;">
                                            <label id=""><b>@mr.rankname</b></label>
                                        </th>



                                        <th style="width: 20%;">
                                            <label id=""><b>IntroducerId</b></label>
                                        </th>

                                        <th style="width: 15%;">
                                            <label id=""><b>Introducer Name</b></label>
                                        </th>

                                        @*<th style="width:20%;">
           <label id="BranchCode"><b>Introducer Id</b></label>
        </th>
            
        <th style="width:20%;">
            <label id="Mobile" ><b>Introducer Name</b></label>
        </th>*@

                                    </tr>
                                </thead>
                }

                a = a + 1;
                                <tr>
                                    <td>
                                        @a
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.newagentid)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.rankname)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.introducerid)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.introname)
                                    </td>

                                    @* <td>
            @Html.DisplayFor(modelItem => item.introducerid)
        </td>
             <td>
            @Html.DisplayFor(modelItem => item.introname)
        </td>*@


                                </tr>
            }

                        </table>
        </div>
                        </div>
                </div>
            </div>
        </div>


          <div class="row" style="height:50px">
                        &nbsp;
                    </div>
                  
                   
    </div>
</div>
